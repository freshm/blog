<h1>All Users</h1>

<% @users.each do |user| %>
	<ul>
		<li>
			<%= link_to "#{user.first_name + " " + user.last_name}", user %> | <%= user.email %>
			<% if signed_in? %>
    			<% if current_user.admin? && !current_user?(user) %>
    			- <%= link_to "Delete", user,
    			                      method: :delete,
    			                      data: { confirm: "Are you sure?"},
    			                      class: "admin_option" %>
    			<% end %>
			<% end %>
		</li>
	</ul>
<% end %>
