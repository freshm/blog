<div class="center">
    <h1>All Users</h1>

    <table border="1">
        <tr>
            <th colspan="3"><%= will_paginate @users %></th>
        </tr>
        <tr>
            <th>User</th>
            <th>Email</th>
            <th>Options</th>
        </tr>

        <% @users.each do |user| %>
            <tr>
                <td class="table_option"><%= link_to user.full_name, user %></td>
                <td><%= user.email %></td>
                <td class="table_option">
                <% if signed_in? %>
                    <% if current_user.admin? && !current_user?(user) %>
                        <%= link_to "Delete", user,  method: :delete,
                                                     data: { confirm: "Are you sure?"},
                                                     class: "icon-remove" %>
                    <% end %>
                    <% if user.admin? %>
                        <%= link_to "Remove admin", '#' , class: "icon-check"%>
                    <% else %>
                        <%= link_to "Promote to admin", '#', class: "icon-check-empty"%>
                    <% end%>
                <% end %> </td>
            </tr>
        <% end %>
        <tr>
            <th colspan="3"><%= will_paginate @users%></th>
        </tr>
    </table>
</div>
