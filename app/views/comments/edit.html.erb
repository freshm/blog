<div class="input_form">
    <h1>Edit Comment</h1>

    <%= form_for([@blogpost, @comment]) do |f| %>
        <% if @comment.errors.any? %>
            <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                    <% for message in @comment.errors.full_messages %>
                    <li>
                        <%= message %>
                    </li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <div class="field">
            <%= f.label :content %>
            <br />
            <%= f.text_area :content %>
        </div>
    
        <div class="action">
            <%= submit_tag "Edit comment", class: "submit" %>
        </div>
    <% end %>
</div>