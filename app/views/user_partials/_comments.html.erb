<div class="all_posts">
    <h2>Comments:</h2>
    <% unless @comments.any? %>
        <p>There are no comments.</p>
    <% end %>

    <%= will_paginate @comments %>
        <% @comments.each do |comment| %>
            <div class="user_post">
                <h3> Posted <%= "#{time_ago_in_words(comment.created_at)}" %> ago in
                <%= link_to comment.blog_post.title, comment.blog_post %> </h3>
                <%= comment.content %>
                <br />
            </div>
        <% end %>
    <%= will_paginate @comments %>
</div>