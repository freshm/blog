<div class="input_form">
	<h1>Log in</h1>
	
	<div class="form">
		<%= form_tag sessions_path do %>
			<div class="field">
				<%= label_tag :email %>
				<%= text_field_tag :email, params[:email] %>
			</div>
			<div class="field">
				<%= label_tag :password %>
				<%= password_field_tag :password %>
			</div>
			<div class="action">
				<%= submit_tag "Log in", class: "submit" %>
			</div>
		<% end %>
	</div>
</div>
